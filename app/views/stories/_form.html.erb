<%= simple_form_for(@story) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :chapter, :input_html => {:rows => 30}%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary'%>
    </div>
<% end %>

